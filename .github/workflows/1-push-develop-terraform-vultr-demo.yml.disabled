name: Demo Terraform Vultr Connect

on:
  push:
    branches:
      - demo_vultr_terraform

jobs:
  terraform:
    runs-on: ubuntu-latest

    env:
      VULTR_API_KEY: ${{ secrets.K8S_LABS_VULTR_API_KEY }}

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Terraform
        uses: hashicorp/setup-terraform@v3

      - name: Terraform Init
        run: terraform init        
      - run: echo "ðŸŽ‰ Terraform initialized"

      - name: Terraform Validate
        run: terraform validate

      - name: Terraform Plan
        run: terraform plan -out=tfplan

      - name: Terraform Apply
        env:
          VULTR_API_KEY: ${{ secrets.K8S_LABS_VULTR_API_KEY }}
        run: terraform apply -auto-approve tfplan

      - name: Run Ubuntu Runner Test
        run: |
          echo "Installing vultr-cli..."
          curl -s https://api.github.com/repos/vultr/vultr-cli/releases/latest \
            | grep "browser_download_url.*linux_amd64.tar.gz" \
            | cut -d : -f 2,3 \
            | tr -d \" \
            | wget -qi -
          tar -xzf vultr-cli_*_linux_amd64.tar.gz
          sudo mv vultr /usr/local/bin/
          rm vultr-cli_*_linux_amd64.tar.gz
          echo "Configuring vultr-cli..."
          vultr-cli config set --api-key "$VULTR_API_KEY"
          echo "Listing Vultr server instances:"
          vultr-cli instance list
        env:
          VULTR_API_KEY: ${{ secrets.K8S_LABS_VULTR_API_KEY }}
        